# LLM Configuration
LLM_PROVIDER=azure  # "azure" or "openai"
LLM_MODEL=gpt-4o    # deployment name for Azure, model name for OpenAI

# Azure OpenAI (when LLM_PROVIDER=azure)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# OpenAI (when LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Elastic Configuration
# Set to "local" for development, "cloud" for production
ELASTIC_ENV=local

# Local Elastic (used when ELASTIC_ENV=local)
ELASTIC_LOCAL_URL=http://localhost:9200

# Cloud Elastic (used when ELASTIC_ENV=cloud)
ELASTIC_CLOUD_ID=your-cloud-id-here
ELASTIC_API_KEY=your-elastic-api-key-here

# Elastic index name
ELASTIC_INDEX=projects

# SQLite database path
SQLITE_DB_PATH=evaluation.db

# Sampling configuration
SAMPLE_SIZE=500
MIN_PER_INDUSTRY=5

# Evaluation configuration
TOP_K_RETRIEVAL=20
TOP_K_JUDGE=10
USE_TEXT_SEARCH=true
USE_VECTOR_SEARCH=false
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002